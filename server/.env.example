# Copy this file to .env and fill in values for local development.
# NOTE: Do NOT commit your real secrets to the repo. Add `.env` to .gitignore

# ----------------------------------------------------------------------------
# Core server configuration
# ----------------------------------------------------------------------------
# PORT can be left undefined in production so the host can assign it.
#PORT=5000

# MongoDB connection string
MONGO_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/mymusiccity?retryWrites=true&w=majority

# JWT secret for signing tokens. REQUIRED in production; the server will refuse
# to start if NODE_ENV=production and this is missing.
JWT_SECRET=replace-with-a-strong-secret

# Allowed institutional email domain for signup/login restrictions
ALLOWED_EMAIL_DOMAIN=vanderbilt.edu

# ----------------------------------------------------------------------------
# Web and CORS configuration
# ----------------------------------------------------------------------------
# Frontend origin allowed for CORS (e.g. http://localhost:3000 or https://myapp.vercel.app)
CORS_ORIGIN=http://localhost:3000

# Public URL of the frontend used when generating verification links. If unset,
# defaults to CORS_ORIGIN or http://localhost:3000
FRONTEND_URL=http://localhost:3000

# ----------------------------------------------------------------------------
# Email (SMTP) configuration â€” optional in development
# ----------------------------------------------------------------------------
# If SMTP_* are set, real verification emails will be sent. Otherwise a
# verification link will be logged and (in dev) included in the API response.
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=MyMusicCity <no-reply@mymusiccity.app>

# In development you can allow the API to include the verification link in the
# signup response for convenience. Leave false in production.
ALLOW_DEV_VERIFY=true

# ----------------------------------------------------------------------------
# Deployment metadata (optional)
# ----------------------------------------------------------------------------
#BRANCH=
#COMMIT=
